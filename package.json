{
  "name": "vocal-recorder",
  "type": "module",
  "version": "1.2.0",
  "description": "MP3 audio recorder for the web",
  "author": "Fahadul Islam @dapotatoman",
  "license": "MIT",
  "repository": "dapotatoman/vocal-recorder",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "vite build",
    "postinstall": "pnpm prepack",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "@shiguredo/rnnoise-wasm": "^2022.2.0",
    "@toots/shine.js": "^1.0.3",
    "extendable-media-recorder": "^9.1.13",
    "mitt": "^3.0.1",
    "nanoid": "^5.0.6",
    "opus-decoder": "^0.7.3",
    "ts-ebml": "^2.0.2",
    "wasm-media-encoders": "^0.6.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.12.1",
    "@antfu/utils": "^0.7.7",
    "@types/node": "^20.12.4",
    "@vitest/browser": "^1.4.0",
    "changelogen": "^0.5.5",
    "eslint": "^9.5.0",
    "playwright": "^1.43.0",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.4.0"
  },
  "pnpm": {
    "overrides": {
      "follow-redirects@<=1.15.5": ">=1.15.6",
      "undici@<=5.28.2": ">=5.28.3"
    }
  }
}
