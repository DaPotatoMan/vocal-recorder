{
  "name": "vocal-recorder",
  "type": "module",
  "version": "2.0.1-0",
  "packageManager": "pnpm@10.11.0",
  "description": "MP3 audio recorder for the web",
  "author": "Fahadul Islam @dapotatoman",
  "license": "MIT",
  "repository": "dapotatoman/vocal-recorder",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "prepack": "vite build",
    "release": "npm run lint && npm run test -- --run && changelogen --release --prepatch && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "@toots/shine.js": "^1.0.3",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^22.13.4",
    "@vitest/browser": "^2.1.9",
    "@vitest/coverage-v8": "2.1.9",
    "changelogen": "^0.5.7",
    "eslint": "^9.20.1",
    "playwright": "^1.50.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.9"
  }
}
